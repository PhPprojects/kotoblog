{% extends 'layout.html.twig' %}
{% block maincolumn %}
    <article>
        <h1>{{ article.title }}</h1>
        <h6><span class="glyphicon glyphicon-calendar"></span> {{ article.createdAt|date('d/m/Y') }}</h6>
        {% if article.image|default('null') != 'null' %}
            {{ image(article.image, 'articleMainImage')|raw }}
        {% endif %}
        {{ article.text|raw }}
        {% include 'articleTags.html.twig' with {'tags': article.tags} %}
    </article>
    <h3 id="comments">Comments</h3>
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'kotoblogppua'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

{% endblock maincolumn %}
