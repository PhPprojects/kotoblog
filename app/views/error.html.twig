{% extends 'layout.html.twig' %}
{% block styles %}
    {{ parent() }}
    <style>
        .error-template {padding: 40px 15px;text-align: center;}
        .error-actions {margin-top:15px;margin-bottom:15px;}
        .error-actions .btn { margin-right:10px; }
    </style>
{% endblock %}
{% block container %}
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!</h1>
                <h2>
                    {{ message }}</h2>
                <div class="error-details">
                    Sorry, an error has occured, You can choose the action below.
                </div>
                <div class="error-actions">
                    <a href="{{ path('homepage') }}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Take Me Home </a><a href="{{ path('homepage') }}" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
